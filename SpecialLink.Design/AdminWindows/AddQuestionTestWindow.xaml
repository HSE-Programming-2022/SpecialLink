<Window x:Class="SpecialLink.Design.AdminWindows.AddQuestionTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpecialLink.Design.AdminWindows"
        mc:Ignorable="d"
        Title="AddQuestionTestWindow" Height="450" Width="800">

    <Window.Background>
        <ImageBrush ImageSource="/Pictures/Backgrounds_CMYK/Back2.jpg"/>
    </Window.Background>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Row="0" 
            Grid.Column="1"
            Text="            Список вопросов "
            FontSize="30"
            Foreground="Black"
            Background="GhostWhite"
            Margin="20 15 20 0"
            VerticalAlignment="Center"/>

        <TextBlock
            Grid.Row="0" 
            Grid.Column="0"
            Text=" Введите название теста: "
            TextWrapping="Wrap"
            FontSize="22"
            Foreground="Black"
            Background="GhostWhite"
            Margin="20 15 20 0"
            VerticalAlignment="Center"/>

        <TextBox
            Grid.Row="1" 
            Name="NameForTestTextBox"
            Grid.Column="0"
            FontSize="20"
            TextWrapping="Wrap"
            Background="RoyalBlue"
            Margin="20 15 20 5"
            Foreground="GhostWhite"/>

        <Grid
            Name="AddQuestionGrid"
            Grid.Row="2" 
            Grid.Column="0"
            Grid.RowSpan="2"
            Background="GhostWhite"
            Margin="20 15 20 15">

            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0" 
                Grid.Column="0" 
                Grid.ColumnSpan="2"
                Text="Добавление вопроса"
                Margin="10"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="20"/>

            <TextBlock
                Grid.Row="1" 
                Grid.Column="0" 
                Grid.ColumnSpan="2"
                Text="Введите вопрос: "
                Margin="10"
                VerticalAlignment="Center"
                FontSize="20"/>

            <TextBox
                Grid.Row="2" 
                Name="NameForQuestionTextBox"
                Grid.Column="0"
                FontSize="18"
                Grid.ColumnSpan="2"
                TextWrapping="Wrap"
                Background="RoyalBlue"
                Margin="10"
                Foreground="GhostWhite"/>

            <TextBlock
                Grid.Row="3" 
                Grid.Column="0" 
                Text="Ответ №1 : "
                Margin="10"
                VerticalAlignment="Center"
                FontSize="20"/>

            <TextBlock
                Grid.Row="3" 
                Grid.Column="1" 
                Text="Ответ №2 : "
                Margin="10"
                VerticalAlignment="Center"
                FontSize="20"/>

            <TextBox
                Grid.Row="4"
                Grid.Column="0"
                Name="Answer1TextBox"
                FontSize="18"
                TextWrapping="Wrap"
                Background="RoyalBlue"
                Margin="10"
                Foreground="GhostWhite"/>

            <TextBox
                Grid.Row="4"
                Grid.Column="1"
                Name="Answer2TextBox"
                FontSize="18"
                TextWrapping="Wrap"
                Background="RoyalBlue"
                Margin="10"
                Foreground="GhostWhite"/>



        </Grid>

        <TextBlock
            Grid.Row="3"
            Grid.Column="1"
            Background="GhostWhite"
            Margin="20 5 20 70"
            Text="Введите описание:"
            FontSize="26"
            VerticalAlignment="Center"
            />

        <TextBox
            Background="RoyalBlue"
            FontSize="22"
            TextWrapping="Wrap"
            Grid.Row="3"
            Grid.Column="1"
            Margin="20 70 20 15"
            Name="DescriptionTextBox"/>


        <ListBox Name="QuestionsListBox" 
                 Grid.Row="1" 
                 Grid.Column="1" 
                 Grid.RowSpan="2" 
                 Grid.ColumnSpan="3"
                 Margin="20 15 20 0" 
                 Background="GhostWhite" 
                 ScrollViewer.CanContentScroll="False">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Text="Вопрос: "
                            FontSize="16" 
                            FontWeight="Bold" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Center"
                            />

                        <TextBlock 
                            Initialized="QuestionNameTextBlock_Initialized"
                            Name="QuestionNameTextBlock" 
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            FontSize="14" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Center" > Question Name</TextBlock>
                        <TextBlock 
                            Initialized="Answer_1_TextBlock_Initialized"
                            Name="Answer_1_TextBlock" 
                            Grid.Row="2" 
                            Grid.Column="0" 
                            FontSize="14"
                            Background="RoyalBlue"
                            Foreground="GhostWhite"
                            TextWrapping="Wrap"
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" > Answer_1 </TextBlock>
                        <TextBlock 
                            Initialized="Answer_2_TextBlock_Initialized" 
                            Name="Answer_2_TextBlock" 
                            Grid.Row="2" 
                            Grid.Column="1"  
                            FontSize="14"
                            Background="RoyalBlue"
                            Foreground="GhostWhite"
                            TextWrapping="Wrap"
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" > Answer_2 </TextBlock>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Name="AddQuestionButton" 
                Click="AddQuestionButton_Click"
                Content="Добавить вопрос" 
                Foreground="GhostWhite" 
                Grid.Column="0" 
                Grid.Row="4" 
                HorizontalAlignment="Left" 
                Margin=" 20 0 20 0" 
                Height="35" 
                Width="110" 
                FontWeight="Bold"  />

        <Button Name="DeleteQuestionButton" 
                Click="DeleteQuestionButton_Click"
                Content="Удалить вопрос" 
                Foreground="GhostWhite" 
                Grid.Column="1" 
                Grid.Row="4" 
                HorizontalAlignment="Left" 
                Margin=" 20 0 20 0" 
                Height="35" 
                Width="110" 
                FontWeight="Bold"  />

        <Button Name="AddFullTestButton" 
                Click="AddFullTestButton_Click"
                Content="Добавить тест" 
                Foreground="GhostWhite" 
                Grid.Column="1" 
                Grid.Row="4" 
                HorizontalAlignment="Right" 
                Margin=" 0 0 20 0" 
                Height="35" 
                Width="100" 
                FontWeight="Bold"  />

    </Grid>
</Window>
